{
  "name": "bissoy-staff-manager",
  "version": "1.0.0",
  "description": "Bissoy Staff Manager.",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "build": "tsc",
    "dev": "tsc -w",
    "dist": "electron-builder"
  },
  "dependencies": {
    "20": "^1.0.0",
    "axios": "^1.8.4",
    "node-global-key-listener": "^0.3.0",
    "screenshot-desktop": "^1.15.1",
    "sharp": "^0.34.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "bissoy",
    "staff",
    "manager",
    "typescript"
  ],
  "author": "Bissoy.com",
  "license": "MIT",
  "build": {
    "appId": "com.bissoystaff.manager",
    "productName": "Bissoy Staff Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "user_data.db",
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "./user_data.db",
        "to": "./user_data.db"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": [
      "**/*.dll",
      "**/*.dylib"
    ],
    "npmRebuild": false,
    "forceCodeSigning": false
  }
}
